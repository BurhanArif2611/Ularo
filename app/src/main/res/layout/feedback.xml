<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_10sdp"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_floral_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cambria_italic"
                    android:padding="@dimen/_8sdp"
                    android:text="Rate Your Experience"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_24"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_floral_right" />

            </LinearLayout>


            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:saveEnabled="true"
                android:layout_marginTop="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="true"
                android:text="Feedback"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"
                android:fontFamily="@font/cambria_bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/cambria_bold"/>
            <EditText
                android:id="@+id/etcomment"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="write your review here"
                android:textAllCaps="true"
                android:background="@drawable/corners_logout"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_14sdp"/>

            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:background="@drawable/rount_btn_green"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/cambria_bold"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
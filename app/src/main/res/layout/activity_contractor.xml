<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/splash_background"
    android:layout_height="match_parent"
    tools:context=".userContent.RepairAndMaintainanceActivity">

    <include layout="@layout/tool_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_barLayout"
        android:background="@drawable/corners">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_barLayout"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_view_list"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/cambria_regular"
                    android:gravity="center"
                    android:text="Contractor form"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_20sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambria_regular"
                        android:text="Story Building(Manjil)"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_btn_bg_color" />

                    <EditText
                        android:id="@+id/etbuilding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Story Building(Manjil)"
                        android:fontFamily="@font/cambria_regular"
                        android:inputType="number"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambria_regular"
                        android:text="Area in Square feet(shetrafal)"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_btn_bg_color" />

                    <EditText
                        android:id="@+id/etarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambria_regular"
                        android:inputType="number"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambria_regular"
                        android:text="Type of Work"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_btn_bg_color" />

                    <Spinner
                        android:id="@+id/servicetype"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:padding="@dimen/_5sdp"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambria_regular"
                        android:text="Map(Naksha)"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_btn_bg_color" />

                    <Spinner
                        android:id="@+id/spinner_map"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/Light_Gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambria_regular"
                        android:text="Choose Image"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_btn_bg_color" />

                    <TextView
                        android:id="@+id/tvpath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:drawableRight="@drawable/ic_upload"
                        android:fontFamily="@font/cambria_regular"
                        android:hint="No photograph Upload"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambria_bold"
                        android:text="urgent Requirement"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_btn_bg_color" />
                    <RadioGroup
                        android:id="@+id/radiogroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:checkedButton="@id/btnno"
                        android:padding="@dimen/_10sdp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cambria_regular"
                            android:padding="@dimen/_5sdp"
                            android:textAllCaps="true"
                            android:text="yes"
                            android:textSize="@dimen/_12sdp" />

                        <RadioButton
                            android:id="@+id/btnno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cambria_regular"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:text="no"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_12sdp" />


                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/detaillayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_30sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cambria_regular"
                            android:text="No. of kitchen"
                            android:textAllCaps="true"
                            android:textColor="@color/gray_btn_bg_color" />

                        <EditText
                            android:id="@+id/etkitchen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="No. of kitchen"
                            android:fontFamily="@font/cambria_regular"
                            android:inputType="number"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_30sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cambria_regular"
                            android:text="No. of Rooms"
                            android:textAllCaps="true"
                            android:textColor="@color/gray_btn_bg_color" />

                        <EditText
                            android:id="@+id/etroom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="No. of rooms"
                            android:fontFamily="@font/cambria_regular"
                            android:inputType="number"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_30sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cambria_regular"
                            android:text="No. of Halls"
                            android:textAllCaps="true"
                            android:textColor="@color/gray_btn_bg_color" />

                        <EditText
                            android:id="@+id/ethall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="No. of halls"
                            android:fontFamily="@font/cambria_regular"
                            android:inputType="number"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_30sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cambria_regular"
                            android:text="No. of bathroom"
                            android:textAllCaps="true"
                            android:textColor="@color/gray_btn_bg_color" />

                        <EditText
                            android:id="@+id/etbathroom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="No. of bathroom"
                            android:fontFamily="@font/cambria_regular"
                            android:inputType="number"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_30sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cambria_regular"
                            android:text="No. of latrin"
                            android:textAllCaps="true"
                            android:textColor="@color/gray_btn_bg_color" />

                        <EditText
                            android:id="@+id/etlatrin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:autofillHints="No. of latrin"
                            android:fontFamily="@font/cambria_regular"
                            android:inputType="number"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </LinearLayout>
                <Button
                    android:id="@+id/btnsend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="→ Send"
                    android:textColor="@color/white"
                    android:fontFamily="@font/cambria_bold"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:background="@drawable/rount_btn" />
            </LinearLayout>

        </ScrollView>


    </RelativeLayout>




</RelativeLayout>
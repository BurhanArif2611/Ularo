<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".bidderContent.BiddderBidActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bid_status"
        android:tint="@color/white"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_10sdp"/>

    <include layout="@layout/tool_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_barLayout">

        <EditText
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:hint="Search"
            android:id="@+id/bid_search_btn"
            android:fontFamily="@font/cambria_regular"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawablePadding="@dimen/_10sdp"
            android:background="@drawable/rount_search"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:layout_below="@+id/bid_search_btn"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/corners"/>



    </RelativeLayout>


</RelativeLayout>
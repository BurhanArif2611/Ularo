<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_bidder_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:contentDescription="@string/nav_header_desc"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:src="@drawable/ic_user"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="0.5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:text="User Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/user_mobile_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="235685241"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/view_profile_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/corners_accent"
                            android:paddingLeft="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="View Profile"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:background="@drawable/corners"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/faq_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_home"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@android:color/black"
                        android:fontFamily="@font/titilium"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Home"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/bid_state_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_bid_status"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@android:color/black"
                        android:fontFamily="@font/titilium"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Bid Status"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/help_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_need_help"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@android:color/black"
                        android:fontFamily="@font/titilium"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Need Help?"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_profile"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@android:color/black"
                        android:fontFamily="@font/titilium"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Profile"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/history_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_order_history"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@android:color/black"
                        android:fontFamily="@font/titilium"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Order History"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_16" />


                    <TextView
                        android:id="@+id/terms_condition_Nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_terms"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@android:color/black"
                        android:fontFamily="@font/titilium"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:text="Terms &amp; Condition"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/logoutItemNav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_menu_logout"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@android:color/black"
                        android:fontFamily="@font/titilium"
                        android:padding="@dimen/_4sdp"
                        android:text="Logout"

                        android:textColor="@android:color/black"

                        android:textSize="@dimen/text_size_16" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:fontFamily="@font/titilium"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_4sdp"
                    android:text="Share"
                    android:textColor="@android:color/black"

                    android:textSize="@dimen/text_size_16"
                    android:visibility="gone" />
                <!--<LinearLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/facebook_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/ic_facebook" />

                    <ImageView
                        android:id="@+id/insta_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/ic_twiter" />

                    <ImageView
                        android:id="@+id/gmail_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/ic_gmail" />
                </LinearLayout>-->
            </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
